<?xml version="1.0" encoding="utf-8"?>
<com.example.jtnote.widget.InsetableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jtnote.ui.KeyboardActivity">

    <LinearLayout
        android:id="@+id/ll_bottom_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="ok"
            android:textSize="20sp"
            android:background="#ccc"/>
    </LinearLayout>

</com.example.jtnote.widget.InsetableRelativeLayout>
