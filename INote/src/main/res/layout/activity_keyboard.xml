<?xml version="1.0" encoding="utf-8"?>
<com.example.jtnote.widget.InsetableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jtnote.ui.KeyboardActivity">

    <RelativeLayout
        android:id="@+id/ll_bottom_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:layout_alignParentBottom="true"
        android:background="#88000000"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:layout_above="@+id/ll_button_area"
            android:background="#ddd"/>

        <LinearLayout
            android:id="@+id/ll_button_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ddd"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="more"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ok"
                android:textSize="20sp"/>

        </LinearLayout>
    </RelativeLayout>

</com.example.jtnote.widget.InsetableRelativeLayout>
