<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <selector>
            <item android:state_pressed="true" android:drawable="@drawable/ic_match_male"></item>
            <item android:state_pressed="false" android:drawable="@drawable/ic_match_female"></item>
        </selector>
    </item>
    <item android:state_selected="false">
        <selector>
            <item android:state_pressed="true" android:drawable="@drawable/ic_score_normal"></item>
            <item android:state_pressed="false" android:drawable="@drawable/ic_score_selected"></item>
        </selector>
    </item>
</selector>