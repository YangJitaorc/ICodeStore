<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.sometest.LayoutChangeTest.InsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.sometest.LayoutChangeTest.LayoutChangeActivity"
    android:fitsSystemWindows="false"
    android:background="#777"
    >

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="click1"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_edit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="top"
        android:background="#678"
        android:layout_marginBottom="20dp"
        />

</com.example.administrator.sometest.LayoutChangeTest.InsetLayout>
