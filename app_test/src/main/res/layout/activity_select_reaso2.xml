<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv"
        android:background="#FFFFFF"
        >

        <LinearLayout
            android:id="@+id/ll_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:id="@+id/ll_selections"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


              <CheckBox
                  android:layout_width="match_parent"
                  android:layout_height="80dp"
                  android:paddingLeft="30dp"
                  android:text="reason 1"
                  android:textSize="19sp"
                  />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingLeft="30dp"
                    android:text="reason 2"
                    android:textSize="19sp"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingLeft="30dp"
                    android:text="reason 3"
                    android:textSize="19sp"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingLeft="30dp"
                    android:text="reason 4"
                    android:textSize="19sp"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingLeft="30dp"
                    android:text="reason 5"
                    android:textSize="19sp"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingLeft="30dp"
                    android:text="reason 6"
                    android:textSize="19sp"
                    />

                <CheckBox
                    android:id="@+id/cb_other"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingLeft="30dp"
                    android:text="Other"
                    android:textSize="19sp"
                    />


            </LinearLayout>

            <EditText
                android:id="@+id/et_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="input you reason"
                android:background="@null"
                android:visibility="gone"
                />

        </LinearLayout>



    </ScrollView>

    <TextView
        android:id="@id/tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:elevation="30dp"
        android:text="delete account"
        android:textSize="19sp"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
